<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.taskflow.controller.ModalNuevoUsuarioController">

    <!-- Título -->
    <Label fx:id="lblTitulo" text="Nuevo Usuario" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Cuadrícula de formulario -->
    <GridPane hgap="10" vgap="10">
        <!-- Fila 0: Foto -->
        <Label text="Foto" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button fx:id="btnSeleccionarFoto" text="Seleccionar foto..." GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <!-- Fila 1: Nombre -->
        <Label text="Nombre *" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtNombre" promptText="Nombre completo" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Fila 2: Email -->
        <Label text="Email *" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtEmail" promptText="correo@ejemplo.com" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Fila 3: Teléfono -->
        <Label text="Teléfono" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtTelefono" promptText="600123456" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Fila 4: Rol -->
        <Label text="Rol *" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ComboBox fx:id="comboRol" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Fila 5: Contraseña -->
        <Label fx:id="lblPasswordLabel" text="Contraseña *" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <!-- Fila 6: Activo -->
        <Label text="Activo" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <CheckBox fx:id="checkActivo" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <!-- Fila 7: Notas -->
        <Label text="Notas" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextArea fx:id="txtNotas" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    </GridPane>

    <!-- Barra de botones -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnCancelar" text=" Cancelar" onAction="#handleCancelar">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="14px"/>
            </graphic>
        </Button>
        <Button fx:id="btnGuardar" text=" Guardar" onAction="#handleGuardar" style="-fx-text-fill: white; -fx-background-color: #3498DB;">
            <graphic>
                <FontAwesomeIconView glyphName="SAVE" size="14px"/>
            </graphic>
        </Button>
    </HBox>

</VBox>
