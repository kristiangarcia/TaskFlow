<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox spacing="10" style="-fx-padding: 15;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.taskflow.controller.ModalAsignacionesController">

    <!-- Título -->
    <Label text="Asignaciones de Tarea" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Encabezado de información de tarea -->
    <VBox spacing="3" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
        <Label fx:id="lblTareaTitulo" text="Tarea: Diseñar interfaz de usuario" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
        <Label fx:id="lblTareaInfo" text="Categoría: Desarrollo Web | Tiempo estimado: 120 min" style="-fx-font-size: 10px; -fx-text-fill: #6c757d;" />
    </VBox>

    <!-- Título de sección -->
    <Label text="Añadir asignación" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-margin: 5 0 0 0;" />

    <!-- Cuadrícula de formulario -->
    <GridPane hgap="10" vgap="8" style="-fx-max-width: 400;">
        <!-- Fila 0: Usuario -->
        <Label text="Usuario *" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <ComboBox fx:id="comboUsuario" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250" />

        <!-- Fila 1: Rol en tarea -->
        <Label text="Rol *" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="comboRol" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250" />

        <!-- Fila 2: Horas asignadas -->
        <Label text="Horas" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtHoras" promptText="2.0" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="250" />
    </GridPane>

    <!-- Botón para añadir -->
    <Button fx:id="btnAnadirAsignacion" text=" Añadir asignación" onAction="#handleAnadirAsignacion" style="-fx-padding: 8 15 8 15;">
        <graphic>
            <FontAwesomeIconView glyphName="PLUS" size="14px"/>
        </graphic>
    </Button>

    <!-- Título de sección -->
    <Label text="Asignaciones actuales" style="-fx-font-size: 12px; -fx-font-weight: bold;" />

    <!-- Vista de tabla -->
    <TableView fx:id="tableAsignaciones" VBox.vgrow="ALWAYS" style="-fx-font-size: 11px;">
        <columns>
            <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="120" />
            <TableColumn fx:id="colRol" text="Rol" prefWidth="110" />
            <TableColumn fx:id="colHoras" text="Horas" prefWidth="70" />
            <TableColumn fx:id="colCompletado" text="Completado" prefWidth="80" />
            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="90" />
        </columns>
    </TableView>

    <!-- Cuadro de resumen -->
    <HBox spacing="15" style="-fx-background-color: #e9ecef; -fx-padding: 8;">
        <Label fx:id="lblTotalUsuarios" text="Total usuarios: 2" style="-fx-font-size: 10px;" />
        <Label fx:id="lblHorasAsignadas" text="Horas: 3.5h" style="-fx-font-size: 10px;" />
        <Label fx:id="lblTiempoEstimado" text="Estimado: 2.0h" style="-fx-font-size: 10px;" />
    </HBox>

    <!-- Barra de botones -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-margin: 5 0 0 0;">
        <Button fx:id="btnCerrar" text=" Cerrar" onAction="#handleCerrar" style="-fx-padding: 8 15 8 15;">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" size="14px"/>
            </graphic>
        </Button>
    </HBox>

</VBox>
